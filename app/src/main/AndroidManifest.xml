<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kryptoblocks.rewardx2019">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/test_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/test_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true" >
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".SocialLoginActivity"
           />
        <activity android:name=".SignUpActivity"
            android:windowSoftInputMode="stateVisible|adjustResize|adjustPan"
            />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".LaunchFirstActivity" />
        <activity android:name=".AddProgramActivity"
            android:windowSoftInputMode="stateVisible|adjustResize|adjustPan"/>
        <activity android:name=".ExpandedSearchActivity" />
        <activity android:name=".OfferDescriptionActivity" />
        <activity android:name=".CashOutActivity" />
        <activity android:name=".PayInStoreActivity" />
        <activity android:name=".AirlineRedeemActivity" />
        <activity android:name=".CoffeeShopRewardsActivity" />
        <activity android:name=".AddCardActivity" />
        <activity android:name=".NetBankingActivity" />
        <activity android:name=".FilterActivity" />
        <activity android:name=".DiscoverAddProgramsActivity" />
        <activity android:name=".AllVendorRewardsActivity" />
        <activity android:name=".RedeemDescriptionActivity" />
        <activity
            android:name=".DiscoverDescriptionActivity" />
        <activity android:name=".TranslucentDiscoverActivity"
            android:theme="@style/Theme.AppCompat.Translucent"></activity>
    </application>

</manifest>