<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiscoverDescriptionActivity">

    <LinearLayout
        android:id="@+id/translucent_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/discover_desc_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:id="@+id/vendor_name_discover_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Vendor name"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

        <ImageView
            android:id="@+id/img_discover_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:adjustViewBounds="true"
        android:src="@drawable/retail_search"
            android:padding="10sp"
       />
    <TextView
        android:id="@+id/offerName_discover_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello albot"
        android:textSize="25sp"
        android:padding="5sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        />
    <TextView
        android:id="@+id/rewards_discover_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100"
        android:textStyle="bold"
        android:textSize="40sp"
        android:padding="5sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        />


</LinearLayout>