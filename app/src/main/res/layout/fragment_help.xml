<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@drawable/help_image"
          android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20sp"
    android:text="Earn"
    android:textStyle="bold"
    android:textSize="18sp"/>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:lines="4"
          android:textColor="@color/colorBlack"
          android:textSize="16sp"
          android:text="Earn when you pay, engage and refer\nEarn reward tokens for every purchase"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Pay"
           android:textStyle="bold"
           android:textSize="18sp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:lines="4"
           android:textColor="@color/colorBlack"
           android:textSize="16sp"
           android:text="Redeem from your balance at checkout\nRedeem 10 token for every dollar spent"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Exchange"
