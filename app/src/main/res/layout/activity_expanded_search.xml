<LinearLayout
    android:id="@+id/expanded_search_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_arrow_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"/>
    <TextView
        android:id="@+id/search_header_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_margin="10sp"
        android:text="Select a Category for Search"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/expanded_search_subLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">
        <ImageView
        android:id="@+id/back_arrow_sub_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back_black_24dp"/>
    <TextView
        android:id="@+id/search_sub_header_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="10sp"
        android:text="Select a Category for Search"
        />
    </LinearLayout>
